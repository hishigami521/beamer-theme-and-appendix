\mode<presentation>

%
%% definition of back-ground color
%
\setbeamercolor*{title in head/foot}{parent=palette tertiary}
\setbeamercolor*{section in head/foot}{parent=palette tertiary}

\setbeamercolor*{author in head/foot}{parent=palette primary}
\setbeamercolor*{date in head/foot}{parent=palette secondary}

\setbeamerfont{section in head/foot}{size=\Large,series=\bfseries}

%
%% definition of header
%
\defbeamertemplate*{headline}{hishigami theme}
{
  \leavevmode%
%% first column
  \hbox{%
  \begin{beamercolorbox}[wd=1.0\paperwidth,ht=2.25ex,dp=1ex,left]{title in head/foot}%
    \usebeamerfont{title in head/foot}\hspace*{2ex}\insertshorttitle\hspace*{2ex}
  \end{beamercolorbox}}%
  \vskip0pt%
%% second column
%  \hbox{%
%  \begin{beamercolorbox}[wd=1.0\paperwidth,ht=4.9ex,dp=1ex,left]{section in head/foot}%
%    \usebeamerfont{section in head/foot}\hspace*{1.zw}\insertsectionhead\hspace*{1.zw}
%  \end{beamercolorbox}}%
%  \vskip0pt%
}

%
%% definition of footter
%
\defbeamertemplate*{footline}{hishigami theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left]{author in head/foot}%
    \usebeamerfont{author in head/foot}\hspace*{2ex}\insertshortauthor~~(\insertshortinstitute)\hspace*{2ex}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot}\hspace*{2ex}\insertshortdate{}
  \end{beamercolorbox}}%
  \vskip0pt%
}

\setbeamersize{text margin left=1em,text margin right=1em}

\mode
<all>
